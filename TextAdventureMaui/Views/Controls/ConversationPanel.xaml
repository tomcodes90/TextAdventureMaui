<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAdventureMaui.Views.Controls.ConversationPanel">

    <Frame Padding="15"
           BackgroundColor="#222831"
           CornerRadius="12"
           HasShadow="True"
           WidthRequest="400"
           IsVisible="{Binding ShowConversation}">
        <VerticalStackLayout Spacing="10">

            <Label Text="{Binding CurrentSpeaker}"
                   FontSize="20"
                   TextColor="Gold"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding CurrentLine}"
                   FontSize="18"
                   TextColor="White"
                   LineBreakMode="WordWrap"/>

            <CollectionView ItemsSource="{Binding CurrentChoices}"
                            SelectionMode="Single"
                            IsVisible="{Binding HasChoices}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="6"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8"
                               BackgroundColor="#393E46"
                               CornerRadius="8"
                               Margin="5">
                            <Label Text="{Binding Text}"
                                   TextColor="White"
                                   FontSize="16"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChooseCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Continue"
                    Command="{Binding ContinueCommand}"
                    IsVisible="{Binding ShowContinue}"
                    HorizontalOptions="Center"
                    WidthRequest="120"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
