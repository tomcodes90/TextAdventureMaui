<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextAdventureMaui.Views.Controls.DobbleCardView">
    <Border
        x:Name="CardBorder"
        Margin="20"
        Stroke="Black"
        StrokeThickness="2"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 200"
        HeightRequest="400"
        WidthRequest="400"
        Padding="0">
        <!-- Absolute layout so we can position icons in a circle -->
        <AbsoluteLayout x:Name="IconLayer" />
    </Border>
</ContentView>