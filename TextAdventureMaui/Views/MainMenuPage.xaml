<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TextAdventureMaui.Views.Controls"
             x:Class="TextAdventureMaui.Views.MainMenuPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <Grid RowDefinitions="*,Auto"
          ColumnDefinitions="Auto,*">

        <!-- Title centered -->
        <Image Source="title.png"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               Aspect="AspectFit"
               HeightRequest="400" />

        <!-- Menu bottom-left -->
        <VerticalStackLayout Spacing="10" Padding="50" VerticalOptions="End" HorizontalOptions="Start">

            <controls:MenuButton Text="START NEW GAME"
                         Icon="adventurer.png"
                         Command="{Binding StartCommand}" />

            <controls:MenuButton Text="SETTINGS"
                         Icon="settings.png"
                         Command="{Binding SettingsCommand}" />

            <controls:MenuButton Text="QUIT"
                         Icon="exit.png"
                         Command="{Binding ExitCommand}" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>
