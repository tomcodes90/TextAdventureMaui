<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ===================== -->
    <!-- Activity / Progress -->
    <!-- ===================== -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource ActionPrimary}, Dark={StaticResource TextPrimary}}" />
    </Style>
    <Style TargetType="ProgressBar">
        <!-- Fill color of the bar -->
        <Setter Property="ProgressColor" Value="{AppThemeBinding Light={StaticResource Danger}, Dark={StaticResource Danger}}" />

        <!-- Bar background (unfilled part) -->
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray700}}" />

        <!-- Make it thicker -->
        <Setter Property="HeightRequest" Value="20" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,5" />
    </Style>



    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="FontFamily" Value="GaramondRegular"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ===================== -->
    <!-- Base Button Style -->
    <!-- ===================== -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource MysticBrush}" Opacity="0.3" Radius="6" Offset="2,2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================== -->
    <!-- Menu Button Style with Icon -->
    <!-- ===================== -->
    <Style x:Key="MenuButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="WidthRequest" Value="320"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="ImageSource" Value="placeholder.png"/>
        <Setter Property="ContentLayout" Value="Left,12"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource MysticBrush}" Opacity="0.3" Radius="6" Offset="2,2"/>
            </Setter.Value>
        </Setter>

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
                            <Setter Property="TextColor" Value="{StaticResource ActionPrimary}"/>
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="{StaticResource MysticBrush}" Opacity="0.6" Radius="15" Offset="4,4"/>
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
                            <Setter Property="TextColor" Value="{StaticResource ActionSecondary}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="{StaticResource MysticBrush}"/>
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource MysticBrush}" Opacity="0.3" Radius="6" Offset="2,2"/>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ===================== -->
    <!-- Entry / Editor -->
    <!-- ===================== -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray700}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray700}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="80"/>
    </Style>

    <!-- ===================== -->
    <!-- Pages & Shell -->
    <!-- ===================== -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" />
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light={StaticResource Mystic}, Dark={StaticResource MagicHighlight}}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource ActionPrimary}, Dark={StaticResource Mystic}}" />
    </Style>

    <!-- ===================== -->
    <!-- Picker / DatePicker / TimePicker -->
    <!-- ===================== -->
    <Style x:Key="PickerStyle" TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Duplicate style for DatePicker -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Duplicate style for TimePicker -->
    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- ===================== -->
    <!-- Switch / CheckBox / RadioButton -->
    <!-- ===================== -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{AppThemeBinding Light={StaticResource ActionSecondary}, Dark={StaticResource MagicHighlight}}" />
        <Setter Property="ThumbColor" Value="{StaticResource White}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource ActionPrimary}, Dark={StaticResource Mystic}}" />
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
    </Style>

    <!-- ===================== -->
    <!-- ListView / CollectionView -->
    <!-- ===================== -->
    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray800}}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

</ResourceDictionary>
