<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <!-- ===================== -->
    <!-- Basic Colors -->
    <!-- ===================== -->
    <Color x:Key="White">#FFEDDC</Color>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>

    <!-- ===================== -->
    <!-- Background Colors -->
    <!-- ===================== -->
    <Color x:Key="BackgroundDark">#1E1E2F</Color>
    <Color x:Key="BackgroundLight">#2B2B3B</Color>

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>

    <!-- ===================== -->
    <!-- Text Colors -->
    <!-- ===================== -->
    <Color x:Key="TextPrimary">#FFEDDC</Color>
    <Color x:Key="TextSecondary">#CFCFCF</Color>
    <Color x:Key="TextDisabled">#7A7A7A</Color>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <!-- ===================== -->
    <!-- Action / Choice Colors -->
    <!-- ===================== -->
    <Color x:Key="ActionPrimary">#FFD166</Color>
    <Color x:Key="ActionSecondary">#06D6A0</Color>
    <Color x:Key="Danger">#EF476F</Color>

    <SolidColorBrush x:Key="ActionPrimaryBrush" Color="{StaticResource ActionPrimary}"/>
    <SolidColorBrush x:Key="ActionSecondaryBrush" Color="{StaticResource ActionSecondary}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>

    <!-- ===================== -->
    <!-- Fantasy / Magic Colors -->
    <!-- ===================== -->
    <Color x:Key="Mystic">#8338EC</Color>
    <Color x:Key="MagicHighlight">#3A86FF</Color>

    <SolidColorBrush x:Key="MysticBrush" Color="{StaticResource Mystic}"/>
    <SolidColorBrush x:Key="MagicHighlightBrush" Color="{StaticResource MagicHighlight}"/>

    <!-- ===================== -->
    <!-- Gray / UI Colors -->
    <!-- ===================== -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    <Color x:Key="Gray300">#CFCFCF</Color>
    <Color x:Key="Gray400">#B0B0B0</Color>
    <Color x:Key="Gray500">#909090</Color>
    <Color x:Key="Gray600">#707070</Color>
    <Color x:Key="Gray700">#606060</Color>
    <Color x:Key="Gray800">#404040</Color>
    <Color x:Key="Gray900">#2A2A2A</Color>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>

</ResourceDictionary>
